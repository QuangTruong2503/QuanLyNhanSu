@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Trang chủ";
}

<div class="container my-5">
    <div class="row g-4">
        <div class="col-sm-6 col-lg-4">
            <a href="@Url.Action("TienThuong", "Details")" class="card-link">
                <div class="card h-100 border-0 shadow-sm rounded-lg card-hover">
                    <div class="card-body d-flex flex-column align-items-start">
                        <div class="mb-3 text-primary">
                            <i class="bi bi-cash-stack display-4"></i>
                        </div>
                        <h5 class="card-title text-primary font-weight-bold">Tiền thưởng</h5>
                        <p class="card-text">Xem chi tiết tiền thưởng của nhân viên trong quá trình làm việc.</p>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-sm-6 col-lg-4">
            <a href="@Url.Action("KhauTru", "Details")" class="card-link">
                <div class="card h-100 border-0 shadow-sm rounded-lg card-hover">
                    <div class="card-body d-flex flex-column align-items-start">
                        <div class="mb-3 text-danger">
                            <i class="bi bi-journal-minus display-4"></i>
                        </div>
                        <h5 class="card-title text-primary font-weight-bold">Tiền khấu trừ</h5>
                        <p class="card-text">Xem chi tiết tiền khấu trừ của nhân viên trong quá trình làm việc.</p>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-sm-6 col-lg-4">
            <a href="@Url.Action("TienLuong", "Details")" class="card-link">
                <div class="card h-100 border-0 shadow-sm rounded-lg card-hover">
                    <div class="card-body d-flex flex-column align-items-start">
                        <div class="mb-3 text-success">
                            <i class="bi bi-wallet2 display-4"></i>
                        </div>
                        <h5 class="card-title text-primary font-weight-bold">Tiền lương</h5>
                        <p class="card-text">Xem chi tiết tiền lương của nhân viên trong quá trình làm việc.</p>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-sm-6 col-lg-4">
            <a href="@Url.Action("NhanVienChamCong", "Attendances")" class="card-link">
                <div class="card h-100 border-0 shadow-sm rounded-lg card-hover">
                    <div class="card-body d-flex flex-column align-items-start">
                        <div class="mb-3 text-warning">
                            <i class="bi bi-calendar-check display-4"></i>
                        </div>
                        <h5 class="card-title text-primary font-weight-bold">Chấm Công</h5>
                        <p class="card-text">Nhập mã xác nhận hoặc quét mã QR để chấm công theo ngày.</p>
                    </div>
                </div>
            </a>
        </div>
    </div>
</div>

<style>
    /* Xóa gạch chân khi hover */
    .card-link {
        text-decoration: none;
        color: inherit;
    }
    /* Hiệu ứng hover và bóng đổ cho card */
    .card-hover {
        transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
    }

        .card-hover:hover {
            transform: translateY(-10px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
        }
</style>
