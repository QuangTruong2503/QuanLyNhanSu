@model QuanLyNhanSu.Models.BonusModel

@{
    ViewData["Title"] = "Thêm Lương Thưởng";
}

<h1 class="text-center">Thêm Lương Thưởng</h1>
<hr />
<div class="d-flex justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm rounded-3 p-4">
            <form asp-action="Create">
                <div class="row mb-3">
                    <div class="col">
                        <label asp-for="Employee_Id" class="form-label">Mã Nhân Viên</label>
                        <input asp-for="Employee_Id" class="form-control" placeholder="Nhập mã nhân viên" required />
                        <span asp-validation-for="Employee_Id" class="text-danger"></span>
                    </div>
                    <div class="col">
                        <label asp-for="Bonus_Amount" class="form-label">Số Tiền Thưởng</label>
                        <input asp-for="Bonus_Amount" class="form-control" placeholder="Nhập số tiền thưởng" required />
                        <span asp-validation-for="Bonus_Amount" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col">
                        <label asp-for="Bonus_Date" class="form-label">Ngày Thưởng</label>
                        <input asp-for="Bonus_Date" type="date" class="form-control" required />
                        <span asp-validation-for="Bonus_Date" class="text-danger"></span>
                    </div>
                </div>
                <div class="mb-3">
                    <label asp-for="Reason" class="form-label">Lý Do</label>
                    <textarea asp-for="Reason" class="form-control" placeholder="Nhập lý do"></textarea>
                    <span asp-validation-for="Reason" class="text-danger"></span>
                </div>
                <div asp-validation-summary="All" class="text-danger mb-3"></div>
                @if (TempData["Success"] != null)

                {
                    <p class="text-success text-center">@TempData["Success"]</p>
                }
                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">Trở về</a>
                    <input type="submit" value="Tạo Mới" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
