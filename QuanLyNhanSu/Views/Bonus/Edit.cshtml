@model QuanLyNhanSu.Models.BonusModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>BonusModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            
            <div class="form-group">
                <label asp-for="Bonus_Id" class="control-label"></label>
                <input asp-for="Bonus_Id" class="form-control" readonly/>
                <span asp-validation-for="Bonus_Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee_Id" class="control-label"></label>
                <input asp-for="Employee_Id" class="form-control" />
                <span asp-validation-for="Employee_Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bonus_Amount" class="control-label"></label>
                <input asp-for="Bonus_Amount" class="form-control" type="text"/>
                <span asp-validation-for="Bonus_Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bonus_Date" class="control-label"></label>
                <input asp-for="Bonus_Date" class="form-control" />
                <span asp-validation-for="Bonus_Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reason" class="control-label"></label>
                <textarea asp-for="Reason" class="form-control" ></textarea>
                <span asp-validation-for="Reason" class="text-danger"></span>
            </div>
            <div asp-validation-summary="All" class="text-danger"></div>
            @if(TempData["Success"] !=null)
            {
                <p class="alert alert-success">@TempData["Success"]</p>
            }
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
