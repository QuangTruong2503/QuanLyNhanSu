@model QuanLyNhanSu.ViewModels.ResetPasswordViewModel

@{
    ViewData["Title"] = "Đăng Ký Nhân Sự Mới";
}

<h1>Đăng Ký Nhân Sự Mới</h1>
<hr />
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <form asp-action="ResetPassword">
                        <div class="row">
                            <div class="col-md-6 form-group">
                                <label asp-for="EmployeeId" class="control-label">Họ</label>
                                <input asp-for="EmployeeId" class="form-control" readonly />
                                <span asp-validation-for="EmployeeId" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 form-group">
                                <label asp-for="NewPassword" class="control-label">Tên</label>
                                <input asp-for="NewPassword" class="form-control" />
                                <span asp-validation-for="NewPassword" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 form-group">
                                <label asp-for="NewPassword" class="control-label">Email</label>
                                <input asp-for="NewPassword" class="form-control" />
                                <span asp-validation-for="NewPassword" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 form-group">
                                <label asp-for="ConfirmPassword" class="control-label">Số điện thoại</label>
                                <input asp-for="ConfirmPassword" class="form-control" />
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Continue similar row-based layout for other fields -->

                        <div class="form-group mt-3">
                            <a asp-action="Index" class="btn btn-secondary">Trở về</a>
                            <input type="submit" value="Tạo Mới" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
