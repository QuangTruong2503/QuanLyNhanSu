@model QuanLyNhanSu.Models.PositionModel

@{
    ViewData["Title"] = "Thêm Mới Chức Vụ";
}

<h1>@ViewData["Title"]</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ThemMoiChucVu">
            
            <div class="form-group">
                <label asp-for="position_name" class="control-label"></label>
                <input asp-for="position_name" class="form-control" />
                <span asp-validation-for="position_name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="base_salary" class="control-label"></label>
                <input asp-for="base_salary" class="form-control" type="number"/>
                <span asp-validation-for="base_salary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="department_id" class="control-label"></label>
                <select asp-for="department_id" class="form-control" asp-items="@ViewBag.departments">
                </select>
                <span asp-validation-for="department_id" class="text-danger"></span>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary" >Thêm</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ChucVu">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
