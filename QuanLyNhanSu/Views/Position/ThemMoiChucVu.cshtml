@model QuanLyNhanSu.Models.PositionModel

@{
    ViewData["Title"] = "Thêm Mới Chức Vụ";
}

<div class="container my-5">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white text-center">
            <h2>@ViewData["Title"]</h2>
        </div>
        <div class="card-body">
            <form asp-action="ThemMoiChucVu" class="p-4">
                <div class="mb-3">
                    <label asp-for="position_name" class="form-label fw-bold"></label>
                    <input asp-for="position_name" class="form-control" />
                    <span asp-validation-for="position_name" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="base_salary" class="form-label fw-bold"></label>
                    <input asp-for="base_salary" class="form-control" type="number" />
                    <span asp-validation-for="base_salary" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="department_id" class="form-label fw-bold"></label>
                    <select asp-for="department_id" class="form-select" asp-items="@ViewBag.departments">
                    </select>
                    <span asp-validation-for="department_id" class="text-danger"></span>
                </div>
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <div class="d-grid">
                    <button type="submit" class="btn btn-primary btn-lg">Thêm</button>
                </div>
            </form>
            <div class="text-center mt-3">
                <a asp-action="ChucVu" class="btn btn-outline-secondary">Quay Lại</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
