@model IEnumerable<QuanLyNhanSu.ViewModels.PositionViewModel>

@{
    ViewData["Title"] = "ChucVu";
}

<h1>Danh Sách Chức Vụ</h1>

<p>
    <a asp-action="ThemMoiChucVu">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.position_id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.position_name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.base_salary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.department_name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.position_id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.position_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.base_salary)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.department_name)
            </td>
            <td>
                <div class="btn-group">
                        <button type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                            Tùy chỉnh
                        </button>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item text-success" href="@Url.Action("Edit", new { id = item.position_id })">Chi tiết</a></li>
                            <li><button class="dropdown-item text-danger" onclick="openDeleteModal('@item.position_id')">Xóa</button></li>
                        </ul>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>
<!-- Modal xác nhận xoá -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Xác nhận xoá</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Bạn có chắc chắn muốn xoá phòng ban này?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <button type="button" class="btn btn-danger" id="confirmDelete">Xóa</button>
            </div>
        </div>
    </div>
</div>

<script>
    var deleteCategoryId;

    function openDeleteModal(id) {
        deleteCategoryId = id;
        $('#deleteModal').modal('show');
    }

    document.getElementById('confirmDelete').addEventListener('click', function () {
        deleteCategory(deleteCategoryId);
    });

    function deleteCategory(id) {
        // Gửi yêu cầu POST để xoá
        $.ajax({
            url: '/Position/Delete/' + id,
            type: 'POST',
            data: {
                __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val() // Để hỗ trợ AntiForgeryToken
            },
            success: function () {
                $('#deleteModal').modal('hide'); // Ẩn modal sau khi xoá
                location.reload(); // Làm mới trang sau khi xoá thành công
            },
            error: function () {
                alert('Xoá không thành công!'); // Thông báo lỗi nếu có
            }
        });
    }
</script>