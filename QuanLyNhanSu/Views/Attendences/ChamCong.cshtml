@model QuanLyNhanSu.Models.AttendanceModel
@{
    ViewBag.Title = "Chấm Công";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Chấm Công Ngày: @TempData["DateNow"]</h2>

<form asp-action="ChamCong" method="post">
    <div class="form-group col-md-4">
        <label asp-for="Employee_Id" class="control-label">Nhập mã nhân viên</label>
        <input asp-for="Employee_Id" class="form-control" required/>
        <span asp-validation-for="Employee_Id" class="text-danger"></span>
    </div>
    <div class="form-group py-2">
        <button type="submit" class="btn btn-primary">Chấm Công</button>
        <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#KetThucModal">
            Kết thúc chấm công
        </button>
    </div>
</form>
<div asp-validation-summary="All" class="text-danger"></div>
@if (TempData["Message"] != null)
{
    <div class="alert alert-success">
        @TempData["Message"]
    </div>
}
<!-- Kết thúc Modal -->
<div class="modal fade" id="KetThucModal" tabindex="-1" aria-labelledby="KetThucModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="KetThucModalLabel">Modal title</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Có xác nhận kết thúc chấm công ngày @TempData["DateNow"] hay không?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                <form asp-action="KetThucChamCong" method="post">
                    <button type="submit" class="btn btn-danger">Kết thúc</button>
                </form>
            </div>
        </div>
    </div>
</div>
