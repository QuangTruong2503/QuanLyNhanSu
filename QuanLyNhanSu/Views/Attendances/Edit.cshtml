@model QuanLyNhanSu.Models.AttendanceModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Chi Tiết Chấm Công</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            
            <div class="form-group">
                <label asp-for="Attendance_Id" class="control-label"></label>
                <input asp-for="Attendance_Id" class="form-control" readonly/>
                <span asp-validation-for="Attendance_Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee_Id" class="control-label"></label>
                <input asp-for="Employee_Id" class="form-control" />
                <span asp-validation-for="Employee_Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Attendance_Date" class="control-label"></label>
                <input asp-for="Attendance_Date" class="form-control" />
                <span asp-validation-for="Attendance_Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="status_id" class="control-label"></label>
                <select asp-for="status_id" class="form-control" id="statusSelect" ></select>
                <span asp-validation-for="status_id" class="text-danger"></span>
            </div>
            <div asp-validation-summary="All" class="text-danger"></div>
            @if(TempData["SuccessMessage"] != null)
            {
                <p class="alert alert-success">@TempData["SuccessMessage"]</p>
            }
            <div class="form-group">
                <input type="submit" value="Cập nhật" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="DanhSach">Back to List</a>
</div>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        loadAttendanceStatus();
    });
    function loadAttendanceStatus() {
        $.ajax({
            url: '@Url.Action("GetAttendanceStatus", "Attendances")',
            type: 'GET',
            success: function (response) {
                var dropdown = $('#statusSelect')
                // Reset the position dropdown
                $('#statusSelect').empty();

                // Add new positions to the dropdown
                $.each(response, function (index, value) {
                    $('#statusSelect').append('<option value="' + value.value + '">' + value.text + '</option>');
                });
                dropdown.val(@ViewData["AttendanceStatus"]);

            },
            error: function () {
                alert('Lỗi khi tải dữ liệu vị trí.');
            }
        });
    };
</script>
