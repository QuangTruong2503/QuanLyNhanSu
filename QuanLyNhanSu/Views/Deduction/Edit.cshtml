@model QuanLyNhanSu.Models.DeductionModel

@{
    ViewData["Title"] = "Chỉnh sửa khấu trừ lương";
}

<h1 class="text-center my-4">@ViewData["Title"]</h1>

<div class="d-flex justify-content-center">
    <div class="col-md-6">
        <div class="card shadow p-4 mb-5 bg-white rounded">
            <div class="card-body">
                <h4 class="card-title text-center mb-4">Thông tin khấu trừ lương</h4>

                <form asp-action="Edit">
                    <!-- Deduction ID (Readonly) -->
                    <div class="mb-3">
                        <label asp-for="Deduction_Id" class="form-label">Mã khấu trừ</label>
                        <input asp-for="Deduction_Id" class="form-control" readonly />
                        <span asp-validation-for="Deduction_Id" class="text-danger"></span>
                    </div>

                    <!-- Employee ID -->
                    <div class="mb-3">
                        <label asp-for="Employee_Id" class="form-label">Mã nhân viên</label>
                        <input asp-for="Employee_Id" class="form-control" />
                        <span asp-validation-for="Employee_Id" class="text-danger"></span>
                    </div>

                    <!-- Deduction Amount -->
                    <div class="mb-3">
                        <label asp-for="Deduction_Amount" class="form-label">Số tiền khấu trừ</label>
                        <input asp-for="Deduction_Amount" class="form-control" type="number" />
                        <span asp-validation-for="Deduction_Amount" class="text-danger"></span>
                    </div>

                    <!-- Deduction Date -->
                    <div class="mb-3">
                        <label asp-for="Deduction_Date" class="form-label">Ngày khấu trừ</label>
                        <input asp-for="Deduction_Date" class="form-control" type="date" />
                        <span asp-validation-for="Deduction_Date" class="text-danger"></span>
                    </div>

                    <!-- Reason -->
                    <div class="mb-3">
                        <label asp-for="Reason" class="form-label">Lý do</label>
                        <textarea asp-for="Reason" class="form-control"></textarea>
                        <span asp-validation-for="Reason" class="text-danger"></span>
                    </div>

                    <!-- Success Message -->
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success text-center mt-3">
                            @TempData["SuccessMessage"]
                        </div>
                    }

                    <!-- Validation Summary -->
                    <div asp-validation-summary="All" class="text-danger mb-3"></div>

                    <!-- Submit Button -->
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">Lưu Thay Đổi</button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Back to List Link -->
        <div class="text-center mt-3">
            <a asp-action="Index" class="btn btn-link">Quay lại danh sách</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
